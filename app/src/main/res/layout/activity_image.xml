<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="image.ImageActivity">

    <ImageView
        android:id="@+id/imageActivityIv"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toTopOf="@+id/imageActivityBtnLocalLoad"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/imageActivityBtnLocalLoad"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_24"
        android:text="@string/localLoad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageActivityBtnNetworkLoad"
        app:layout_constraintTop_toBottomOf="@+id/imageActivityIv" />

    <Button
        android:id="@+id/imageActivityBtnNetworkLoad"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_24"
        android:text="@string/networkLoad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageActivityBtnLocalLoad"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageActivityIv" />
</androidx.constraintlayout.widget.ConstraintLayout>